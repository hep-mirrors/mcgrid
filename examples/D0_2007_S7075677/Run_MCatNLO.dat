(run){

  EVENTS 1M
  SCALEFACTOR:=1.
  ANALYSIS Rivet

  % Enforce parton-level
  FRAGMENTATION=Off
  YFS_MODE=0
  MI_HANDLER=None

  % Do not allow emissions
  CSS_NOEM=1
  CSS_MAXEM=0
  NLO_CSS_MAXEM=0

  % Make sure that the top is not considered for the Sherpa a_s running,
  % because usually the PDF provided a_s running does not know about the top.
  % This is not needed if USE_PDF_ALPHAS is enabled.
  MASS[6] = 1e20

}(run);

(isr){
  PDF_LIBRARY=CT10Sherpa
  PDF_SET=ct10
  % Or get better results using the LHAPDF interface of Sherpa
  % (if configured with --enable-lhapdf=/path/to/lhapdf)
  #PDF_LIBRARY=LHAPDFSherpa
  #PDF_SET=CT10nlo
  #USE_PDF_ALPHAS=1
}(isr);

(beam){
  % Tevatron collider setup
  BEAM_REMNANTS=0
  BEAM_1  2212; BEAM_ENERGY_1 980
  BEAM_2 -2212; BEAM_ENERGY_2 980
}(beam);

(me){
  ME_SIGNAL_GENERATOR Amegic, Comix, Internal
  EVENT_GENERATION_MODE Weighted
  SCALES VAR{SCALEFACTOR*8315.18}{SCALEFACTOR*8315.18}{8315.18}
  ME_QED=Off
}(me);

(processes){
  Process 93 93 -> 11 -11
  NLO_QCD_Mode MC@NLO;
  Order (*,2);
  ME_Generator Amegic;
  RS_ME_Generator Comix;
  End process
}(processes);

(selector){
  Mass 11 -11 66. 116.
}(selector);

(analysis){
  BEGIN_RIVET {
    -a MCgrid_D0_2007_S7075677
    IGNOREBEAMS 1
    USE_HEPMC_SHORT 1
    USE_HEPMC_EXTENDED_WEIGHTS 1
  } END_RIVET;
}(analysis);
